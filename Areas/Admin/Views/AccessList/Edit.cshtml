@model TbAccessList

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Access</h4>
                  
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="AccessList" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />
                        <div class="form-group">
                            <label for="exampleInputUsername1">@ResAdmin.lblIP</label>
                            <input asp-for="IpAddress" type="text" class="form-control" placeholder="@ResAdmin.lblIP">
                            <span asp-validation-for="IpAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                           <label for="Type">@ResAdmin.lblType</label>
                         <select asp-for="Type" class="form-control">
                             <option value="Allow" selected=@(Model.Type == "Allow" ? "selected" : "")>Allow</option>
                             <option value="Deny" selected=@(Model.Type == "Deny" ? "selected" : "")>Deny</option>
                         </select>
                         <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">@ResAdmin.lblReason</label>
                            <input asp-for="Reason" type="text" class="form-control" placeholder="@ResAdmin.lblReason">
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">@ResGeneral.lblSave</button>
                        <a href="@Url.Action("List", "AccessList")" class="btn btn-light">@ResGeneral.lblCancel</a>
                        
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}


