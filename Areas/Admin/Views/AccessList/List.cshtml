@model List<TbAccessList>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Access List</h4>
            <div class="card-description">
                <a href="/Admin/AccessList/Edit" class="btn btn-gradient-primary btn-fw">New</a>
            </div>
            <div class="table-responsive">
                <table id="order-listing" class="table table-striped">
                    <thead>
                        <tr>
                            <th> @ResAdmin.lblIP </th>
                            <th> @ResAdmin.lblReason </th>
                            <th> @ResAdmin.lblType </th>
                            <th> @ResAdmin.lblCreatedAt </th>
                            <th> @ResGeneral.lblAction </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var IpAddress in Model)
                        {
                            <tr>
                                <td>@IpAddress.IpAddress </td>
                                <td> @IpAddress.Reason </td>
                                <td class="@(IpAddress.Type == "Deny" ? "text-danger" : "text-success")">
                                    @IpAddress.Type
                                </td>
                                <td> @IpAddress.CreatedAt </td>                             

                                <td>
                                    <a class="btn btn-gradient-info btn-fw" asp-controller="AccessList" asp-action="Edit" asp-route-id="@IpAddress.Id">Edit </a>
                                    <a class="btn btn-gradient-danger btn-fw" asp-controller="AccessList" asp-action="Delete" asp-route-id="@IpAddress.Id"
                                       onclick="return confirm('Are you sure you want to delete this category?');">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
           
        </div>
    </div>
</div>


@section Scripts
{
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>

    <!-- End custom js for this page -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


}